# Copy this file to .env and fill in values
# Telegram Bot Token
API_TOKEN=123456789:YOUR_TELEGRAM_BOT_TOKEN_HERE

# Optional: Restrict bot to a single chat/user (0 = no restriction)
ALLOWED_CHAT_ID=0

# Firestore / GCP project (optional if credentials json already encodes it)
GCP_PROJECT=your-gcp-project-id

# If your service account JSON file has a different name/path set it explicitly
# GOOGLE_APPLICATION_CREDENTIALS=service.json
